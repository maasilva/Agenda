@page
@model Agenda.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Trocar Senha";
}

<h2>Trocar Senha</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="SenhaAtual"></label>
        <input asp-for="SenhaAtual" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="NovaSenha"></label>
        <input asp-for="NovaSenha" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmarSenha"></label>
        <input asp-for="ConfirmarSenha" class="form-control" type="password" />
    </div>
    @if (!string.IsNullOrEmpty(Model.Erro))
    {
        <div class="alert alert-danger">@Model.Erro</div>
    }
    @if (!string.IsNullOrEmpty(Model.Sucesso))
    {
        <div class="alert alert-success">@Model.Sucesso</div>
    }
    <button type="submit" class="btn btn-primary">Trocar Senha</button>
</form>
