@page "{id:int}"
@model Agenda.Pages.Compromissos.DeleteModel
@{
    ViewData["Title"] = "Excluir Compromisso";
}

<h1>Excluir Compromisso</h1>

<h3>Tem certeza que deseja excluir este compromisso?</h3>
<div>
    <h4>Compromisso</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Model.Compromisso.Descricao
        </dd>
        <dt class = "col-sm-2">
            Local
        </dt>
        <dd class = "col-sm-10">
            @Model.Compromisso.Local
        </dd>
        <dt class = "col-sm-2">
            Data e Hora
        </dt>
        <dd class = "col-sm-10">
            @Model.Compromisso.DataHora.ToString("g")
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Compromisso.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
