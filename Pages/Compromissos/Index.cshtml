@page
@model Agenda.Pages.Compromissos.IndexModel
@{
    ViewData["Title"] = "Compromissos";
}

<h1>Compromissos</h1>
<p>
    <a asp-page="Create" class="btn btn-primary">Novo Compromisso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Local</th>
            <th>Data e Hora</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Compromissos)
    {
        <tr>
            <td>@item.Descricao</td>
            <td>@item.Local</td>
            <td>@item.DataHora.ToString("g")</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
