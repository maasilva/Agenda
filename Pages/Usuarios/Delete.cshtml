@page "Delete/{id:int}"
@model Agenda.Pages.Usuarios.DeleteModel
@{
    ViewData["Title"] = "Excluir Usuário";
}

<h2>Excluir Usuário</h2>
<h4>Tem certeza que deseja excluir este usuário?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nome</dd>
        <dt class="col-sm-2">Login</dt>
        <dd class="col-sm-10">@Model.Usuario?.Login</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
@if (!string.IsNullOrEmpty(Model.Erro))
{
    <div class="alert alert-danger">@Model.Erro</div>
}
