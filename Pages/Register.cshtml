@page
@model Agenda.Pages.RegisterModel
@{
    ViewData["Title"] = "Novo Usuário";
}

<h2>Novo Usuário</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" type="password" />
    </div>
    @if (!string.IsNullOrEmpty(Model.Erro))
    {
        <div class="alert alert-danger">@Model.Erro</div>
    }
    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-page="/Login" class="btn btn-secondary">Cancelar</a>
</form>
